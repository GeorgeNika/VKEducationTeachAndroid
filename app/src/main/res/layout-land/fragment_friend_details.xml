<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_image100"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/content_description_avatar_image"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageview_image100"
        android:layout_toRightOf="@+id/imageview_image100"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_unknown"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_user_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_user_id"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageview_image100"
        android:layout_toRightOf="@+id/imageview_image100"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_unknown"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/text_user_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_user_first_name"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageview_image100"
        android:layout_toRightOf="@+id/imageview_image100"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_unknown"
        android:textSize="36sp" />

</RelativeLayout>